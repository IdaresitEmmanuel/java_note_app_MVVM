<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.JavaNoteApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_color_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/status_bar</item>
        <item name="fontFamily">@font/poppins</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.JavaNoteApp.TextField">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:strokeColor">@color/primary_color</item>
    </style>
    
    <style name="RadioTheme" parent="Base.Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textColor">@drawable/radio_selector</item>
        <item name="textFillColor">@drawable/radio_selector</item>
        <item name="buttonTint">@drawable/radio_selector</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/poppins</item>
    </style>
</resources>